# Production Environment Variables
# Copy this file to .env and fill in the values

# Mode
MODE=production

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# App Configuration
VITE_APP_URL=https://sypot.com
VITE_APP_NAME=Sypot
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_URL=https://api.sypot.com
VITE_API_TIMEOUT=30000

# Storage Configuration
VITE_STORAGE_BUCKET=sypot-storage
VITE_MAX_FILE_SIZE=10485760

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_MOCK_AUTH=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_PWA=true

# Third-party Services
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_key
VITE_STRIPE_PUBLIC_KEY=pk_live_xxxxx
VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
VITE_CLOUDINARY_URL=https://api.cloudinary.com/v1_1/xxxxx

# Security (Generate strong random keys)
VITE_ENCRYPTION_KEY=generate_32_char_random_string_here
VITE_JWT_SECRET=generate_32_char_random_string_here
VITE_CSRF_SECRET=generate_32_char_random_string_here

# Email Configuration
VITE_EMAIL_FROM=noreply@sypot.com
VITE_EMAIL_SUPPORT=support@sypot.com

# Rate Limiting
VITE_RATE_LIMIT_WINDOW=900000
VITE_RATE_LIMIT_MAX=100

# Session Configuration
VITE_SESSION_DURATION=86400000
VITE_SESSION_IDLE_TIMEOUT=1800000